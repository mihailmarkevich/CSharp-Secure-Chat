{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "AllowedOrigins": [],

  "RateLimit": {
    "Connect": {
      "WindowSeconds": 5,
      "Limit": 5
    },
    "ChangeName": {
      "WindowSeconds": 5,
      "Limit": 5
    },
    "SendMessage": {
      "WindowSeconds": 5,
      "Limit": 5
    },
    "GetHistory": {
      "WindowSeconds": 5,
      "Limit": 3
    }
  },
  "SpamProtection": {
    "BanSeconds": 10,
    "MaxConnectionsPerIp": 20
  }
}
